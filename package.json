{
	"name": "vue-frag",
	"version": "0.0.0-semantic-release",
	"description": "Vue 2 fragment directive to return multiple root elements",
	"keywords": [
		"vue",
		"vuejs",
		"fragment",
		"directive",
		"component",
		"ssr",
		"multiple root nodes"
	],
	"license": "MIT",
	"repository": "privatenumber/vue-frag",
	"funding": "https://github.com/privatenumber/vue-frag?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist",
		"frag.d.ts"
	],
	"main": "dist/frag.cjs.js",
	"module": "dist/frag.esm.js",
	"unpkg": "dist/frag.js",
	"types": "frag.d.ts",
	"scripts": {
		"prepare": "simple-git-hooks",
		"build": "rollup -c --environment NODE_ENV:production",
		"test": "vitest",
		"test:tsd": "tsd",
		"lint": "eslint --cache .",
		"prepack": "pnpm build && clean-pkg-json -k unpkg"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm build && pnpm lint-staged"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --cache",
			"vitest related --run"
		]
	},
	"peerDependencies": {
		"vue": "^2.6.0"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.15.6",
		"@pvtnbr/eslint-config": "^0.2.1",
		"@rollup/plugin-babel": "^5.3.0",
		"@vue/server-test-utils": "^1.3.0",
		"@vue/test-utils": "^1.3.3",
		"clean-pkg-json": "^1.2.0",
		"eslint": "^7.32.0",
		"jsdom": "^21.1.2",
		"lint-staged": "^13.0.3",
		"outdent": "^0.8.0",
		"rollup": "^2.79.1",
		"rollup-plugin-filesize": "^9.1.2",
		"rollup-plugin-terser": "^7.0.2",
		"simple-git-hooks": "^2.8.1",
		"tsd": "^0.24.1",
		"typescript": "^4.9.3",
		"vitest": "^0.30.1",
		"vue": "^2.7.14",
		"vue-server-renderer": "^2.7.14",
		"vue-template-compiler": "^2.7.14"
	},
	"tsd": {
		"directory": "test"
	},
	"eslintConfig": {
		"extends": "@pvtnbr",
		"env": {
			"browser": true
		},
		"rules": {
			"symbol-description": "off",
			"unicorn/no-array-for-each": "off"
		},
		"overrides": [
			{
				"files": "README.md/*",
				"rules": {
					"vue/multiline-html-element-content-newline": "off",
					"vue/require-v-for-key": "off",
					"vue/no-undef-components": "off"
				}
			}
		]
	}
}
